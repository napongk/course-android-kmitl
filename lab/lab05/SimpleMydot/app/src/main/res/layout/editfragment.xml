<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewfrag"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center_vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="kmitl.lab03.a58070033.simplemydot.fragment.EditDotFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="240dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit a dot"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="23dp"
        app:layout_constraintRight_toRightOf="@+id/preview"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="23dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X :"
        android:textColor="@android:color/background_light"
        app:layout_constraintRight_toLeftOf="@+id/xValue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@+id/xValue"
        android:layout_marginRight="1dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y :"
        android:textColor="@android:color/background_light"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="23dp"
        app:layout_constraintRight_toRightOf="@+id/preview"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="@+id/yValue"
        android:layout_marginRight="23dp" />

    <EditText
        android:id="@+id/yValue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/blueValue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/xValue"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/xValue"
        app:layout_constraintLeft_toRightOf="@+id/textView6" />

    <EditText
        android:id="@+id/xValue"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:backgroundTint="@android:color/background_light"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/preview"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/preview"
        tools:layout_editor_absoluteY="149dp" />

    <SeekBar
        android:id="@+id/seekRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="#ff000d"
        android:secondaryProgressTint="#ff0011"
        android:thumbTint="@android:color/background_light"
        android:tickMark="@android:color/background_light"
        app:layout_constraintRight_toLeftOf="@+id/preview"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/seekGreen"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView11" />

    <SeekBar
        android:id="@+id/seekGreen"
        android:layout_width="83dp"
        android:layout_height="0dp"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="#33cc33"
        android:secondaryProgressTint="#33cc33"
        android:thumbTint="@android:color/background_light"
        android:tickMark="@android:color/background_light"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/sizeValue"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/yValue"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <SeekBar
